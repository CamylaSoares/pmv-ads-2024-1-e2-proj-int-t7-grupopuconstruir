@model UsuarioModel
@{
    ViewData["Title"] = "Perfil";
}


<section class="card mb-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="mt-4">
                <div class="card-body text-center">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                    <h5 class="my-3">@Model.Nome</h5>
                    <p class="text-muted">@Model.Email</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div>
            <div class="card-body">
                <hr>
                <div class="row">
                    <div class="col-sm-6">
                        <p class="mb-0">Nome Completo</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="text-muted mb-0">@Model.Nome</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-6">
                        <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-6">
                        <p class="mb-0">Número de telefone</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="text-muted mb-0">@Model.Telefone</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>