@model List<ServicoModel>
@{
    ViewBag.Title = "Visualizar";
}

@foreach (ServicoModel servicos in Model)
{
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Detalhe do serviço</h1>
        </div>
        <div class="modal-body">

            <div data-mdb-input-init>
                <label>Nome</label>
                <input type="text" readonly maxlength="120" class="form-outline mb-4 form-control form-control-lg form-projeto" id="nome" placeholder="Nome do Serviço">
            </div>

            <div data-mdb-input-init>
                <label>Descrição</label>
                <input type="text" readonly maxlength="120" class="form-outline mb-4 form-control form-control-lg form-projeto" id="descricao" placeholder="Descrição do Serviço">
            </div>

            <div data-mdb-input-init>
                <label>Valor Total</label>
                <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="valorTotal" placeholder="Valor Padrão do Serviço">
            </div>

        </div>

        <div class="modal-footer">
            <a asp-area="" asp-controller="Servico" asp-action="Index" class="btn btn-dark">Voltar</a>
        </div>
    </div>
}