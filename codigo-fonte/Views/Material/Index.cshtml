@model List<MaterialModel>;
@{
    ViewData["Title"] = "Material";
}

<div id="ProjetosTitulo">
    <h1>@ViewData["Title"]</h1>
    <button type="button" class="btn btn-dark btn-lg btn-block" data-bs-toggle="modal" data-bs-target="#adicionarMaterial">
        Adicionar material +
    </button>
</div>

<div id="listaStl">
    <div class="NomeDoProjeto">
        <h5>Nome do material</h5>
    </div>
    <div class="BotaoLateral">
        <!--Botao visualizar-->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#visualizarMaterial">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
        <!-- Botao editar -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#editarMaterial">
            <i class="fa-solid fa-pencil"></i>
        </button>
        <!-- Botao excluir -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#excluirMaterial">
            <i class="fa-solid fa-trash-can"></i>
        </button>
    </div>
</div>
