@model List<MaterialModel>;
@{
    ViewData["Title"] = "Material";
}

<div id="ProjetosTitulo">
    <h1>@ViewData["Title"]</h1>
    <a asp-area="" asp-controller="Material" asp-action="Criar" class="btn btn-dark btn-lg btn-block">
        Adicionar material +
    </a>
</div>

<div id="listaStl">
    <div class="NomeDoProjeto">
        <h5>Nome do material</h5>
    </div>
    <div class="BotaoLateral">
        <!--Botao visualizar-->
        <a asp-area="" asp-controller="Material" asp-action="Visualizar" type="button" class="btn btn-lg btn-block btnCrud">
            <i class="fa-solid fa-magnifying-glass"></i>
        </a>
        <!-- Botao editar -->
        <a asp-area="" asp-controller="Material" asp-action="Editar" type="button" class="btn btn-lg btn-block btnCrud">
            <i class="fa-solid fa-pencil"></i>
        </a>
        <!-- Botao excluir -->
        <a asp-area="" asp-controller="Material" asp-action="Deletar" type="button" class="btn btn-lg btn-block btnCrud">
                <i class="fa-solid fa-trash-can"></i>
        </a>
    </div>
</div>