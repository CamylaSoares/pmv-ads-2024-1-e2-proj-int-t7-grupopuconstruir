@{
    ViewBag.Title = "Visualizar";
}

<div>
    <div>
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Visualizar material</h1>
            </div>
            <div class="modal-body">
                <div data-mdb-input-init>
                    <label for="NomeDoProjeto">Nome do material:</label>
                    <input class="form-outline mb-4 form-control form-control-lg form-projeto" placeholder="Nome do material" />
                </div>
                <div data-mdb-input-init>
                    <label for="DescriçãoDoProjeto">Descrição do material:</label>
                    <textarea placeholder="Descrição do material" name="texto" rows="5" cols="50" class="form-outline mb-4 form-control form-control-lg form-projeto"></textarea>
                </div>
                <div data-mdb-input-init>
                    <label for="PrecoDoProjeto">Preço do material:</label>
                    <input class="form-outline mb-4 form-control form-control-lg form-projeto" placeholder="R$99,90" />
                </div>
            </div>
            <div class="modal-footer">
                <a asp-area="" asp-controller="Material" asp-action="Index" class="btn btn-orc btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>
