@model MaterialModel;
@{
    ViewBag.Title = "Deletar";
}


<div class="centralizarTela mt-5">
    <div class="telaDeletar modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="exampleModalLabel">Excluir material</h4>
        </div>
        <div class="modal-body text-start">
            <p>
                Esta é uma ação definitiva e irreversível,
                tem certeza que deseja exluir o material?
            </p>
            <br>
            <h5>@Model.Descricao</h5>
            <p>Data de criação: @Model.DataCriacao</p>
        </div>
        <div class="modal-footer">
            <a asp-controller="Material" asp-action="Index" role="button" class="btn btn-secondary">Cancelar</a>
            <a type="button" asp-route-id="@Model.Id" asp-controller="Material" asp-action="ConfirmarDeletar" class="btn btn-danger">Excluir</a>
        </div>
    </div>
</div>