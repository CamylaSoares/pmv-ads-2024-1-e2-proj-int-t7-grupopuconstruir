@{
    ViewData["Title"] = "Login";
}

<section class="mh-100 mb-4">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10" style="max-width: 700px">

                <div class="d-flex align-items-center">
                    <button id="btnLogin" style="border-radius: 2rem 0 0 0;" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block btn-select" type="button">Login</button>
                    <button id="btnCadastro" style="border-radius: 0 2rem 0 0;" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block btn-select btn-disable" type="button">Cadastro</button>
                </div>

                <div class="card" style="border-radius: 0 0 1rem 1rem;">
                    <div class="row g-0">
                        <div class="col-md-12 col-lg-12 d-flex align-items-center">
                            <div class="card-body p-4 text-black">

                                <form>

                                    <div style="justify-content:center" class=" d-flex align-items-center mb-3 pb-1">
                                        <span id="tituloLogin" class="h1 fw-bold mb-0">Login</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Preencha os campos abaixo para prosseguir:</h5>

                                    <div hidden id="blocoNome" data-mdb-input-init class="form-outline mb-4 form-control form-control-lg blocoForm">
                                        <i style="color:grey;" class="fa-solid fa-user"></i>
                                        <input type="text" id="inputNome" class="form-control form-control-lg form-login" placeholder="Nome" />
                                    </div>

                                    <div hidden id="blocoTelefone" data-mdb-input-init class="form-outline mb-4 form-control form-control-lg blocoForm">
                                        <i style="color:grey;" class=" fa-solid fa-phone"></i>
                                        <input type="tel" id="inputTelefone" class="form-control form-control-lg form-login" placeholder="Número de telefone" />
                                    </div>

                                    <div id="blocoEmail" data-mdb-input-init class="form-outline mb-4 form-control form-control-lg blocoForm">
                                        <i style="color:grey;" class="fa-solid fa-envelope"></i>
                                        <input type="email" id="inputEmail" class="form-control form-control-lg form-login" placeholder="E-mail" />
                                    </div>

                                    <div id="blocoSenha" data-mdb-input-init class="form-outline mb-4 form-control form-control-lg blocoForm">
                                        <i style="color:grey;" class="fa-solid fa-lock"></i>
                                        <input type="password" id="inputSenha" class="form-control form-control-lg form-login" placeholder="Senha" />
                                    </div>

                                    <div id="btnRecuperarSenha" data-mdb-input-init class="form-outline mb-4">
                                        <p class="pb-lg-2">
                                            Esqueceu sua senha?
                                            <a data-bs-toggle="modal" href="#popupRecuperarSenha" style="color: #393f81; text-decoration: none;">Clique aqui</a>
                                        </p>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button style="width: 100%" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="button">Enviar</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="popupRecuperarSenha" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <span class="h1 fw-bold mb-0">Recuperar senha</span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>

            <div class="modal-body">
                <form>
                    <p class="h5 fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Informe o e-mail da sua conta abaixo.</p>

                    <div id="blocoPopupEmail" data-mdb-input-init class="form-outline mb-4 form-control form-control-lg blocoForm">
                        <i style="color:grey;" class="fa-solid fa-envelope"></i>
                        <input type="email" id="inputEmail" class="form-control form-control-lg form-login" placeholder="E-mail" />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-dark btn-lg btn-block btn-disable" data-bs-dismiss="modal" aria-label="Fechar">Fechar</button>
                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="button">Enviar</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel2">Modal 2</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Hide this modal and show the first with the button below.
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle" data-bs-toggle="modal" data-bs-dismiss="modal">Back to first</button>
            </div>
        </div>
    </div>
</div>





<script src="../wwwroot/js/site.js" crossorigin="anonymous"></script>